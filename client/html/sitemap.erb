<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
		<loc>http://hike.io</loc>
		<priority>1.0</priority>
		<changefreq>weekly</changefreq>
	</url>
	<url>
		<loc>http://hike.io/discover</loc>
		<priority>0.5</priority>
		<changefreq>weekly</changefreq>
	</url>
	<url>
		<loc>http://hike.io/map</loc>
		<priority>0.5</priority>
		<changefreq>weekly</changefreq>
	</url>
	<url>
		<loc>http://hike.io/search</loc>
		<priority>0.2</priority>
		<changefreq>weekly</changefreq>
	</url>
	<% for hike in @hikes %>
	<url>
		<loc>http://hike.io/hikes/<%= hike.string_id %></loc>
		<priority>1.0</priority>
		<changefreq>daily</changefreq>
		<lastmod><%= hike.edit_time.utc.iso8601 %></lastmod>
	</url>
	<% end %>
</urlset>