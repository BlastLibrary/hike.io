<article id="add-page" data-ng-cloak class="add-page" data-ng-controller="AddController" data-meta-description="Add a new hike by specifying name, locality, distance, elevation and latitude / longitude.">
	<h2>Add a hike</h2>
	<form data-ng-submit="add()" action="javascript:void(0);" onkeyup="if (event.keyCode == '27') $.fancybox.close()" data-ng-class="{'submitted': isSubmitted}">
		<div>
			<div>
				<label for="name">Name</label>
				<input id="name" type="text" required="true" autocomplete="off" data-ng-model="hike.name" data-give-focus="isLoaded" placeholder="The Narrows"></input>
			</div>
			<div>
				<label for="locality">Location</label>
				<input id="locality" type="text" required="true" autocomplete="off" data-ng-model="hike.locality" placeholder="Utah, USA"></input>
			</div>
			<div>
				<label for="distance">Distance</label>
				<input id="distance" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.distance" data-model-filter="distance:miles:kilometers:5" placeholder="15.5"></input><span class="units">miles</span>
			</div>
			<div>
				<label for="elevationGain" data-ng-show="isMobile">Elev. Gain</label><label for="elevationGain" data-ng-show="!isMobile">Elevation Gain</label>
				<input id="elevationGain" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.elevation_gain" data-model-filter="distance:feet:meters:5" placeholder="163"></input><span class="units">feet</span>
			</div>
			<div>
				<label for="elevationMax" data-ng-show="isMobile">Elev. Max</label><label for="elevationMax" data-ng-show="!isMobile">Elevation Max</label>
				<input id="elevationMax" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.elevation_max" data-model-filter="distance:feet:meters:5" placeholder="5900"></input><span class="units">feet</span>
			</div>
			<div>
				<label for="latitude">Lat. / Lng.</label>
				<input id="latitude" type="number" step="any" min="-90" max="90" required="true" autocomplete="off" data-ng-model="hike.location.latitude" placeholder="37.30669"></input>
				<input id="longitude" type="number" step="any" min="-180" max="180" required="true" autocomplete="off" data-ng-model="hike.location.longitude" placeholder="-112.94745"></input>
			</div>
			<div>
				<input type="submit" class="btn" value="Add Hike" ng-click="attemptSubmit()"></input>
			</div>
		</div>
	</form>
</article>