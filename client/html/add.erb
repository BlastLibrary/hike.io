<article id="add-page" data-ng-cloak class="add-page" data-ng-controller="AddController">
	<h2 data-ui-if="isLoaded">Add a hike</h2>
	<form data-ng-submit="add()" action="javascript:void(0);" onkeyup="if (event.keyCode == '27') $.fancybox.close()" data-ng-class="{'submitted': isSubmitted}" data-ui-if="isLoaded" data-reset-form-validation="!capabilities.isPrepopulatingFormsSupported &amp;&amp; isLoaded">
		<div>
			<div>
				<label for="name">Name</label>
				<input id="name" type="text" required="true" autocomplete="off" data-ng-model="hike.name" data-give-focus="isLoaded" placeholder="The Narrows" />
			</div>
			<div>
				<label for="locality">Location</label>
				<input id="locality" type="text" required="true" autocomplete="off" data-ng-model="hike.locality" placeholder="Utah, USA" />
			</div>
			<div>
				<label for="distance">Distance</label>
				<input id="distance" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.distance" data-model-filter="distance:miles:kilometers:5" placeholder="15.5" /><span class="units">miles</span>
			</div>
			<div>
				<label for="elevationGain" data-ng-show="isMobile">Elev. Gain</label><label for="elevationGain" data-ng-show="!isMobile">Elevation Gain</label>
				<input id="elevationGain" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.elevation_gain" data-model-filter="distance:feet:meters:5" placeholder="163" /><span class="units">feet</span>
			</div>
			<div>
				<label for="elevationMax" data-ng-show="isMobile">Elev. Max</label><label for="elevationMax" data-ng-show="!isMobile">Elevation Max</label>
				<input id="elevationMax" type="number" step="any" min="0" required="true" autocomplete="off" data-ng-model="hike.elevation_max" data-model-filter="distance:feet:meters:5" placeholder="5900" /><span class="units">feet</span>
			</div>
			<div>
				<label for="latitude">Lat. / Lng.</label>
					<input id="latitude" type="number" step="any" min="-90" max="90" required="true" autocomplete="off" data-ng-model="hike.location.latitude" placeholder="{{isMobile &amp;&amp; '37.3066' || '37.30669'}}" />
					<input id="longitude" type="number" step="any" min="-180" max="180" required="true" autocomplete="off" data-ng-model="hike.location.longitude" placeholder="{{isMobile &amp;&amp; '-112.9474' || '-112.94745'}}" />
			</div>
			<div>
				<input type="submit" class="btn" value="Add Hike" ng-click="attemptSubmit()" />
			</div>
		</div>
	</form>
</article>