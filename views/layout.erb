<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"></meta>
	<% if is_iPhone? %>
		<meta name="viewport" content="width=400"></meta>
	<% else %>
		<meta name="viewport" content="width=device-width"></meta>
	<% end %>
	<title><%= @title %></title>
	<link href="<%= @img_dir %>/favicon.png" rel="icon" type="image/x-icon"></link>
	<%= css :app %>
</head>
<body class="no-touch">
	<div>
		<div class="header shadow-light">
			<div>
				<a href="/">
					<div class="header-div">
						<%= render_svg("#{@img_dir}/logo.svg", {:class => "header-div-icon"}) %>
					</div>
				</a>
				<div class="header-separator"></div>
			</div>
			<div class="header-right">
				<div class="header-separator"></div>
				<div class="header-div header-div-search" >
						<%= render_svg("#{@img_dir}/search.svg", {:class => "header-div-icon"}) %>
				</div>
			</div>
			<%= yield_content :header %>
		</div>
		<div class="sub-header">
			<div class="search-input-div header-right shadow-light">
				<input type="text" class="search-input" placeholder="Hike or location..."></input>
			</div>
		</div>
		<div class="main-container">
			<%= yield %>
		</div>
	</div>

	<footer>

	</footer>

	<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery-1.8.0.min.js" type="text/javascript"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.2/jquery.ui.touch-punch.min.js" type="text/javascript"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/1.4.2/jquery.scrollTo.min.js" type="text/javascript"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/fancybox/2.0.6/jquery.fancybox.pack.js" type="text/javascript"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/masonry/2.1.04/jquery.masonry.min.js" type="text/javascript"></script>
	<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCpS42FCQP8EbwF8hHr6C5FCg6V7hFKS34&sensor=true" type="text/javascript"></script>

	<%= js  :app %>
</body>
</html>
